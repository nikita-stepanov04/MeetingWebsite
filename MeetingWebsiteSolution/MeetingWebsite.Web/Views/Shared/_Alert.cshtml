<div id="liveAlertPlaceholder" class="live-alert-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 col-sm-8 mt-xxl-4 mt-2">
                <div id="alertBox" class="alert alert-dismissible alert-@(TempData["AlertType"] as string)
                        role="alert">
                    <div id="alertMessage">@(TempData["AlertMessage"] as string)</div>
                    <button class="btn-close" aria-label="Close" onclick="hideAlert()"></button>
                </div>
            </div>
        </div>
    </div>
</div>